{% extends '::base.html.twig' %}
{% block body %}

    <div class="row">
        <div class="col s12 m6">
            <div class="card-panel white">
                <h5>Описание платных услуг</h5>
                <img src="{{ asset ('bundles/m4minecraft/img/ball.jpg') }}" title="Шарик" width="100" height="170" />
                <span>
                    Шарики - это донат
                </span>
            </div>
        </div>

        <div class="col s12 m6">
            <div class="card-panel white">
                <h5>Платные услуги</h5>
                <form action="{{ path('m4_minecraft_donut') }}" method="post" {{ form_enctype(form) }}>
                    {{ form_widget(form) }}
                    <input type="submit" class="btn red" />
                </form>
            </div>
        </div>
    </div>
{% endblock body %}