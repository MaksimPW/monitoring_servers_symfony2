{% extends '::base.html.twig' %}
{% block body %}
<div class="section no-pad-bot">
    <div class="row">
        <div class="col s12">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Правила добавления сервера</span>
                </div>
                <div class="card-action">
                    <a href="#">Описание вашего сервера</a>
                    <a href="#">Платные услуги</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row center">
        <h5 class="header col s12 light">Добавить свой сервер</h5>
    </div>

    <form action="{{ path('m4_minecraft_add') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <input type="submit" class="btn red" />
    </form>

    <br>

    <div class="row">
        <div class="col s12 m6">
            <div class="card-panel white">
                <h5>Описание платных услуг</h5>
                <img src="{{ asset ('bundles/m4minecraft/img/ball.jpg') }}" title="Шарик" width="100" height="170" />
                <span>
                    Шарики - это донат
                </span>
            </div>
        </div>

        <div class="col s12 m6">
            <div class="card-panel white">
                <h5>Платные услуги</h5>
                <select class="browser-default">
                    <option value="" disabled selected>Выберите ваш сервер</option>
                    <option value="1">Option 1</option>
                    <option value="2">Option 2</option>
                    <option value="3">Option 3</option>
                </select>
                <br>
                <label>Выберите количество шариков</label>
                <input type="number" value="1" class="white"/>
                <br>
                <input type="submit" value="Купить" class="btn"/>
            </div>
        </div>
    </div>





</div>
{% endblock body %}
