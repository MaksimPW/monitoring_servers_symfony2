{% extends '::base.html.twig' %}

{% block title %}24servera.ru{% endblock %}


{% block body %}
        <div class="section">
            <table class="striped centered hoverable">
                <thead>
                <tr>
                    <th data-field="name">Название сервера</th>
                    <th data-field="descr">Краткое описание</th>
                    <th data-field="adress">Адрес сервера</th>
                    <th data-field="ver">Версия</th>
                    <th data-field="ver">Онлайн</th>
                    <th data-field="bol">Кругов</th>
                </tr>
                </thead>

                <tbody>
                {% for s in pagination %}
                <tr class="{{ s.color }}">
                    <td>{{ s.name }}</td>
                    <td>{{ s.description }}</td>
                    <td>{{ s.ip }}</td>
                    <td>{{ s.ver }}</td>
                    <td>online</td>
                    <td>{{ s.balls }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>



            {# display navigation #}
            <div class="">
                {{ knp_pagination_render(pagination) }}
            </div>

</div>

{% endblock %}