{% extends '::base.html.twig' %}

{% block title %}24servera.ru{% endblock %}


{% block body %}
        <div class="section">
            <table class="striped centered hoverable">
                <thead>
                <tr>
                    <th data-field="name">Название сервера</th>
                    <th data-field="descr">Краткое описание</th>
                    <th data-field="adress">Адрес сервера</th>
                    <th data-field="ver">Версия</th>
                    <th data-field="ver">Онлайн</th>
                    <th data-field="bol">Кругов</th>
                </tr>
                </thead>

                <tbody>
                {% for s in pagination %}
                <tr class="{{ s.color }}">
                    <td>{{ s.name }}</td>
                    <td>{{ s.description }}</td>
                    <td>{{ s.ip }}</td>
                    <td>{{ s.ver }}</td>
                    <td>online</td>
                    <td>{{ s.balls }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>

            <table class="striped centered hoverable">
                <thead>
                <tr>
                    {# sorting of properties based on query components #}
                    <th>{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
                    <th{% if pagination.isSorted('a.Balls') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Balls', 'a.balls') }}</th>
                </tr>
                </thead>

                {# table body #}
                {% for article in pagination %}
                    <tr {% if loop.index is odd %}class="color"{% endif %}>
                        <td>{{ article.id }}</td>
                        <td>{{ article.balls }}</td>
                    </tr>
                {% endfor %}
            </table>


            {# display navigation #}
            <div class="">
                {{ knp_pagination_render(pagination) }}
            </div>

</div>

{% endblock %}