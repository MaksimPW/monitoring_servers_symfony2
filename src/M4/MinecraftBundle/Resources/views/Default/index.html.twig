{% extends '::base.html.twig' %}

{% block title %}24servera.ru{% endblock %}

{% block section %}
    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <br><br>
            <div class="row center">
                <h5 class="header col s12 light">Мониторинг игровых серверов Minecraft</h5>
            </div>
            <div class="row center">
                <a href="/add" class="btn-large waves-effect waves-light red">+ Добавить сервер</a>
                <a href="/add" class="btn-large waves-effect waves-light light-green">Раскрутить сервер</a>
            </div>
        </div>
    </div>
{% endblock section %}

{% block body %}
        <div class="section">
            <table class="striped centered hoverable">
                <thead>
                <tr>
                    <th data-field="name">Название сервера</th>
                    <th data-field="descr">Краткое описание</th>
                    <th data-field="adress">Адрес сервера</th>
                    <th data-field="ver">Версия</th>
                    <th data-field="ver">Онлайн</th>
                    <th data-field="bol">Кругов</th>
                </tr>
                </thead>

                <tbody>
                {% for s in pagination %}
                <tr class="{{ s.color }}">
                    <td><a href="/server/{{ s.id }}">{{ s.name }}</a></td>
                    <td>{{ s.description }}</td>
                    <td>{{ s.ip }}</td>
                    <td>{{ s.ver }}</td>
                    <td>123</td>
                    <td>{{ s.balls }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>

            {# display navigation #}
            <div class="">
                {{ knp_pagination_render(pagination) }}
            </div>

</div>

{% endblock %}